# App Configuration
VERSION=v0.0.1
APP_ENV=development

# Server Ports (按进程覆盖；多个微服务并行运行时请分别设置不同端口)
HTTP_PORT=8080
GRPC_PORT=50051
METRICS_PORT=9464

# Internal gRPC Clients (API Gateway -> Services)
RETRIEVAL_GRPC_ADDR=localhost:50052
STORY_GEN_GRPC_ADDR=localhost:50053
MEMORY_GRPC_ADDR=localhost:50054
VALIDATOR_GRPC_ADDR=localhost:50055

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=z_novel_ai

# Cache (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Vector Database (Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=your_milvus_password

# Storage (Cloudflare R2)
STORAGE_R2_ACCOUNT_ID=4faec3c14a0eb6dff1f8ae588218e1ee
STORAGE_R2_ACCESS_KEY_ID=your_r2_access_key_id
STORAGE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
STORAGE_R2_BUCKET=novel
STORAGE_R2_PUBLIC_URL=https://pub-f5969c4787c14d70a203a5a8264bb457.r2.dev

# Observability
OTLP_ENDPOINT=localhost:4317
LOG_LEVEL=debug

# Security
JWT_SECRET=your_jwt_secret_key_change_me_in_production

# Features
# 关闭时：API Gateway 仅提供基础 CRUD；生成/检索/流式等核心接口仅返回 501 占位响应
FEATURES_CORE_ENABLED=false

# LLM & Embedding (Local or API)
OPENAI_API_KEY=sk-xxxx
HYBGZS_API_KEY=sk-xxxx
SILICONFLOW_API_KEY=sk-xxxx
EMBEDDING_API_KEY=sk-xxxx